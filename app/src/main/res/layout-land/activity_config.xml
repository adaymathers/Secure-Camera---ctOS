<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#AA000000"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CONFIGURACIÓN ctOS"
            android:textColor="#00FF00"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VOLVER"
            android:textColor="#00FF00"
            android:background="@drawable/corner_overlay"
            android:textSize="11sp"
            android:fontFamily="monospace" />

    </LinearLayout>

    <!-- Layout horizontal para landscape -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerConfig"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Panel izquierdo: Configuración -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Toggle envío automático -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#22004400"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ENVÍO AUTOMÁTICO A PC"
                        android:textColor="#00FF00"
                        android:textSize="13sp"
                        android:fontFamily="monospace"
                        android:textStyle="bold" />

                    <Switch
                        android:id="@+id/switchAutoSend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="#00FF00"
                        android:trackTint="#444444" />

                </LinearLayout>

                <!-- OPCIÓN 1: EMAIL -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📧 OPCIÓN 1: EMAIL (UNIVERSAL)"
                    android:textColor="#00FF00"
                    android:textSize="13sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="tu-email@gmail.com"
                    android:inputType="textEmailAddress"
                    android:textColor="#00FF00"
                    android:textColorHint="#444444"
                    android:backgroundTint="#00FF00"
                    android:fontFamily="monospace"
                    android:textSize="11sp"
                    android:layout_marginBottom="16dp" />

                <!-- OPCIÓN 2: SERVIDOR WEB -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#22002200"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🌐 OPCIÓN 2: SERVIDOR WEB"
                        android:textColor="#00FF00"
                        android:textSize="13sp"
                        android:fontFamily="monospace"
                        android:textStyle="bold" />

                    <Switch
                        android:id="@+id/switchUseServer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="#00FF00"
                        android:trackTint="#444444" />

                </LinearLayout>

                <EditText
                    android:id="@+id/etServerUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="https://tuservidor.com/upload.php"
                    android:inputType="textUri"
                    android:textColor="#00FF00"
                    android:textColorHint="#444444"
                    android:backgroundTint="#00FF00"
                    android:fontFamily="monospace"
                    android:textSize="11sp"
                    android:layout_marginBottom="16dp" />

                <!-- Botones -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnTestEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="PROBAR EMAIL"
                        android:textColor="#00FF00"
                        android:background="@drawable/corner_overlay"
                        android:textSize="11sp"
                        android:fontFamily="monospace" />

                    <Button
                        android:id="@+id/btnSaveConfig"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="GUARDAR"
                        android:textColor="#00FF00"
                        android:background="@drawable/corner_overlay"
                        android:textSize="11sp"
                        android:fontFamily="monospace" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <!-- Panel derecho: Información -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📋 INSTRUCCIONES:"
                android:textColor="#00FF00"
                android:textSize="13sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#11002200"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📧 EMAIL: Simple y universal, funciona en cualquier lugar\n\n🌐 SERVIDOR: Máxima autonomía, requiere tu propio hosting\n\n✅ Activa solo una opción para evitar envíos duplicados\n\n📱 Con datos móviles: Email es más confiable\n\n🏠 Con WiFi casa: Ambas opciones funcionan\n\n🔄 ORIENTACIÓN: La app detecta automáticamente portrait/landscape y adapta la interfaz\n\n📸 CAPTURA: Usa el botón de captura o presiona los botones de volumen para una foto rápida"
                    android:textColor="#AAFFAA"
                    android:textSize="10sp"
                    android:fontFamily="monospace"
                    android:lineSpacingMultiplier="1.2" />

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>