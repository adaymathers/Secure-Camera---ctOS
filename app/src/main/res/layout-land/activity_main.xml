<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- C치mara Preview (m치s grande en landscape) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rightPanel"
        app:scaleType="fillCenter" />

    <!-- Panel derecho con controles -->
    <LinearLayout
        android:id="@+id/rightPanel"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#AA000000"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Header ctOS -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SECURE CAMERA"
            android:textColor="#00FF00"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/corner_overlay"
            android:padding="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Info del sistema -->
        <TextView
            android:id="@+id/tvCameraId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CAM ID: HC-001"
            android:textColor="#00FF00"
            android:textSize="10sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STATUS: RECORDING"
            android:textColor="#00FF00"
            android:textSize="10sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="8dp" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TIMESTAMP: --"
            android:textColor="#AAFFAA"
            android:textSize="9sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="8dp" />

        <!-- Ubicaci칩n -->
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LAT: -- | LON: --"
            android:textColor="#AAFFAA"
            android:textSize="9sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="12dp" />

        <!-- Terminal (m치s compacto) -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#11001100"
            android:padding="4dp">

            <TextView
                android:id="@+id/tvTerminal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=">> SISTEMA CTOS INICIADO"
                android:textColor="#00FF00"
                android:textSize="8sp"
                android:fontFamily="monospace" />
        </ScrollView>

        <!-- Botones (verticales) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnCapture"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="游닞 CAPTURAR"
                android:textColor="#00FF00"
                android:background="@drawable/corner_overlay"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <Button
                android:id="@+id/btnVideo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="游닟 VIDEO"
                android:textColor="#FF0000"
                android:background="@drawable/corner_overlay"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="4dp" />

            <Button
                android:id="@+id/btnConfig"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="丘뙖잺 CONFIG"
                android:textColor="#00FF00"
                android:background="@drawable/corner_overlay"
                android:textSize="10sp"
                android:fontFamily="monospace" />

        </LinearLayout>

    </LinearLayout>

    <!-- Overlay izquierdo superior (timestamp en preview) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#88000000"
        app:layout_constraintTop_toTopOf="@id/previewView"
        app:layout_constraintStart_toStartOf="@id/previewView">

        <TextView
            android:id="@+id/tvOverlayTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REC 00:00:00"
            android:textColor="#FF0000"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOverlayLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS: ACQUIRING..."
            android:textColor="#00FF00"
            android:textSize="10sp"
            android:fontFamily="monospace" />

    </LinearLayout>

    <!-- Overlay derecho inferior (info ctOS en preview) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#88000000"
        app:layout_constraintBottom_toBottomOf="@id/previewView"
        app:layout_constraintEnd_toEndOf="@id/previewView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ctOS v2.1"
            android:textColor="#00FF00"
            android:textSize="10sp"
            android:fontFamily="monospace"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SURVEILLANCE"
            android:textColor="#FFFF00"
            android:textSize="8sp"
            android:fontFamily="monospace" />

    </LinearLayout>

    <!-- L칤neas decorativas ctOS -->
    <View
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="#00FF00"
        android:alpha="0.7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/previewView" />

</androidx.constraintlayout.widget.ConstraintLayout>