<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#AA000000"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📧 CONFIGURACIÓN EMAIL"
            android:textColor="#00FF00"
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VOLVER"
            android:textColor="#00FF00"
            android:background="@drawable/corner_overlay"
            android:textSize="12sp"
            android:fontFamily="monospace" />

    </LinearLayout>

    <!-- Configuración de email -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerConfig"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Toggle envío automático -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#22004400"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ENVÍO AUTOMÁTICO POR EMAIL"
                    android:textColor="#00FF00"
                    android:textSize="14sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/switchAutoSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="#00FF00"
                    android:trackTint="#444444" />

            </LinearLayout>

            <!-- Email Address -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📧 DIRECCIÓN DE EMAIL:"
                android:textColor="#00FF00"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ejemplo@gmail.com"
                android:inputType="textEmailAddress"
                android:textColor="#00FF00"
                android:textColorHint="#444444"
                android:backgroundTint="#00FF00"
                android:fontFamily="monospace"
                android:layout_marginBottom="24dp" />

            <!-- Información sobre email -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📧 SISTEMA DE EMAIL ctOS:\n\n✅ Funciona desde cualquier lugar\n✅ WiFi, datos móviles, roaming\n✅ Sin configurar router ni puertos\n✅ Compatible con Gmail, Outlook, etc.\n\n📱 Presiona volumen → 📧 Email automático\n🔍 Incluye overlay completo ctOS\n📍 Con ubicación GPS y timestamp"
                android:textColor="#AAFFAA"
                android:textSize="10sp"
                android:fontFamily="monospace"
                android:background="#11002200"
                android:padding="12dp"
                android:layout_marginBottom="24dp" />

            <!-- Botón de prueba -->
            <Button
                android:id="@+id/btnTestEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📧 PROBAR EMAIL"
                android:textColor="#00FF00"
                android:background="@drawable/corner_overlay"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="16dp" />

            <!-- Botón guardar -->
            <Button
                android:id="@+id/btnSaveConfig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="💾 GUARDAR CONFIGURACIÓN"
                android:textColor="#00FF00"
                android:background="@drawable/corner_overlay"
                android:textSize="12sp"
                android:fontFamily="monospace" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>